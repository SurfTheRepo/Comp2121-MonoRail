delay(timeInSec)

motor() 			//turns the motor on

getInt() 			//gets an int from the keyboard

getString() {
	n = 0
	while(n < 10) {
		string[n+1] = getChar()
	}
	string[0] = n
}

getChar() {
	letterPosition = getInt()
	letter = getInt()
	if (letter = 1) {
		letter = ' ' - letterPosition + 1
	} elif (letter = 2) {
		letter = 'a'
	} elif (letter = 3) {
		letter = 'd'
	} elif (letter = 4) {
		letter = 'g'
	} elif (letter = 5) {
		letter - 'j'
	} elif (letter = 6) {
		letter = 'm'
	} elif (letter = 7) {
		letter = 'p'
	} elif (letter = 8) {
		letter = 't'
	} elif (letter = 9) {
		letter = 'w'
	} 
	letter = letter + letterPosition - 1
}

printString() {
	n = string[0]
	i = 0
	while(i < n) {
		printchar(string[i])
	}
}
